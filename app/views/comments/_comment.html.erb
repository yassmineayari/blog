<% unless comment.archived? %>
  <p class="newarticle" style="font-family: 'URW Chancery L', cursive;" >
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
  <p class="newarticle" style="font-family: 'URW Chancery L', cursive;" >
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
 <br>

  <p>
    <%= link_to "Delete the comment?", [comment.article, comment],method: :delete,data: {
                  confirm: "Are you sure?"
                }  ,class: "border  border-4  text-white rounded-full py-2 px-4 ",style:"background-color: #b36a5e;font-family: 'URW Chancery L', cursive;"%>
  </p>
  <br>
<% end %>
