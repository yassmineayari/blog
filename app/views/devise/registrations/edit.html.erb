
<body class="  flex items-center justify-center h-screen" style="background-color: #ece4db ">

<div class="border border-4 rounded-2xl -mt-20  " style="color:#023047 ; width: 700px; height: auto; background-color: transparent ; margin-left: auto; margin-right: auto;border-color:#023e8a; box-shadow:20px 20px 20px 20px;  ">

<div class="border border-4 rounded-2xl -mt-3" style="border-color: #00b4d8;color:#023047 ;width: 715px; height: auto;margin-left: -2%; margin-rigth:auto ;">
<div class="border border-4 rounded-2xl" style="border-color: #0077b6; height:auto"> 

    <h2 class="text-center mt-10 italic" style=" font-size:60px">Edit Profile <%= resource_name.to_s.humanize %></h2>
    <br>
    <div class=" mt-14 text-center  " style="width:100px ; color:#023047; ">
      <%= link_to "Back", :back ,class: "border rounded-full py-2 px-4 " , style:"border-color:#023047;"%>
    </div>
    <div class="mr-6 -mt-10" style="min-width:100px; margin-left: 80%; color:#023047;" >
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete ,class: "border rounded-full py-2 px-4 " , style:"border-color:#023047;" %>
   </div>
      <br>
  <div style="margin-left:30%; " >
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
   <%= render "devise/shared/error_messages", resource: resource  %>

   <div class=" w-40 h-40">
   <%= f.label :profile_picture , class: "text-xl"%><br />
   <%= image_tag(resource.profile_picture, class: "rounded-full h-32") if resource.profile_picture.attached? %>
    </div>

   <div class="field">
     <%= f.label :username , class: "text-xl"%><br />
     <%= f.text_field :username, value: resource.username , class: "border border-2 border-black rounded-xl h-10 text-black"%>
   </div>
 
   <div class="field">
     <%= f.label :last_name , class: "text-xl"%><br />
     <%= f.text_field :last_name, value: resource.last_name , class: "border border-2 border-black rounded-xl h-10 text-black"%>
   </div>
 


  <div class="field ">
    <%= f.label :email , class: "text-xl" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "border border-2 border-black rounded-xl h-10 text-black"  %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div  class="text-black">Currently waiting confirmation for: <%= resource.unconfirmed_email  %></div>
  <% end %>

  <div class="field">
    <%= f.label :password , class: "text-xl" %> <i>(if you want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "border border-2 border-black rounded-xl h-10 text-black" %>
    <% if @minimum_password_length %>
      <br />
     
    <% end %>
  </div>

  <br>

  <div class="field">
    <%= f.label :password_confirmation , class: "text-xl" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "border border-2 border-black rounded-xl h-10 text-black"%>
  </div>

  <br>

  <div class="field">
    <%= f.label :current_password , class: "text-xl"%> <i>(to confirma your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" , class: "border border-2 border-black rounded-xl h-10 text-black" %>
  </div>

 <br>
 <br>

  <div class="actions">
    <%= f.submit "Update" , class:"text-xl underline" %>
  </div>


<div><%= button_to "Delete your account ?", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
  
<br>

<% end %>