
<body class="  flex items-center justify-center h-screen" style="background-color: #ece4db ">

<div class="border border-4 rounded-2xl -mt-20  " style="color:#023047 ; width: 600px; height: 800px; background-color: transparent ; margin-left: auto; margin-right: auto;border-color:#023e8a; box-shadow:20px 20px 20px 20px;  ">

<div class="border border-4 rounded-2xl -mt-3" style="border-color: #00b4d8;color:#023047 ;width: 615px; height: 815px;margin-left: -2%; margin-rigth:auto ;">
<div class="border border-4 rounded-2xl" style="border-color: #0077b6; height:808px"> 

    <h2 class="text-center mt-10 italic" style=" font-size:60px">Sign up</h2>
    <br>
    <br>
  <div style="margin-left:20%;  ">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "devise/shared/error_messages", resource: resource %>

<br>
     <h1 class="-mt-10" style="">Profile picture</h1><br>

     <div class="field mt-6">
     <label for="user_profile_picture" class="cursor-pointer relative">
       <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 ml-4 -mt-10">
         <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
       </svg>
     </label>
     <%= f.file_field :profile_picture, id: "user_profile_picture", class: "opacity-0 inset-0" %>
   </div>
   

<div class="field">
     <%= f.label :username, class: "text-xl" %><br />
     <%= f.text_field :username, autofocus: true, autocomplete: "username",   class: "border border-2 border-black rounded-xl h-10 text-black"  %>
  </div>
   <br>
<div class="field">
<%= f.label :last_name, class: "text-xl" %><br />
<%= f.text_field :last_name, autocomplete: "last_name", class: "border border-2 border-black rounded-xl h-10 text-black" %>
   </div>
<br>

  <div class="field">
    <%= f.label :email , class:"text-xl " %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-2 border-black rounded-xl h-10 text-black" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password, class:"text-xl "  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "border border-2 border-black rounded-xl h-10 text-black"%>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation , class:"text-xl " %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "border border-2 border-black rounded-xl h-10 text-black"%>
  </div>
<br>

  
  <div class="actions">
    <%= f.submit "Sign up" , class:"text-xl underline"%>
  </div>


  
<% end %>

<%= render "devise/shared/links" %>

</div>

 </body>